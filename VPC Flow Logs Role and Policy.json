{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description" : "AWS CloudFormation Template IAM Role and Policy - VPN Flow Logs",
  "Resources" : {
    "RoleFlowLogs": {
       "Type": "AWS::IAM::Role",
       "Properties": {
          "AssumeRolePolicyDocument": {
             "Version" : "2012-10-17",
             "Statement": [ {
                "Effect": "Allow",
                "Principal": {
                   "Service": [ "vpc-flow-logs.amazonaws.com" ]
                },
                "Action": [ "sts:AssumeRole" ]
             } ]
          },
          "Path": "/"
       }
    },
    "PolicyFlowLogs" : {
      "Type" : "AWS::IAM::Policy",
      "Properties" : {
        "PolicyName" : "FlowLogs",
        "PolicyDocument" : {
          "Statement": [{
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "logs:DescribeLogGroups",
                "logs:DescribeLogStreams"
            ],
            "Resource": "*"
          }]
        },
        "Roles": [{ "Ref" : "RoleFlowLogs" }]
      }
    }
  }
}